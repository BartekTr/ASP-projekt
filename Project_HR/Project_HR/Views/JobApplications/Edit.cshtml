@model JobApplication
@{
    ViewBag.Title = "Edit";
}
<div class="row">
    <div class="col-sm-12">
        <h2>Edit Job Offer</h2>
        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.CvUrl)
                @Html.EditorFor(m => m.CvUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CvUrl, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ContactAgreement)
                @Html.CheckBoxFor(m => m.ContactAgreement, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ContactAgreement, "", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>