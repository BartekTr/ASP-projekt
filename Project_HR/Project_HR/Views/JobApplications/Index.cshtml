@model IEnumerable<Project_HR.Models.JobApplication>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ContactAgreement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CvUrl)
