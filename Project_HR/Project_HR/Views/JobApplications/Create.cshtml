@model Project_HR.Models.JobApplication

@{
    ViewData["Title"] = "Create";
}

<h4>Applicate for @Model.Offer.JobTitle in @Model.Offer.Company.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.OfferId, new { id = "OfferId" })
            <div class="form-group">
                @Html.LabelFor(m => m.UserId)
                @Html.EditorFor(m => m.UserId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CvUrl)
                @Html.EditorFor(m => m.CvUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.CvUrl, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ContactAgreement)
                @Html.CheckBoxFor(m => m.ContactAgreement, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ContactAgreement, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>

        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>